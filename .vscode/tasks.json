{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Push to development resource packs",
        "type": "shell",
        "windows": {
            "command": "xcopy",
            "args": [
                "/E",
                "/I",
                "/F",
                "/C",
                "/Q",
                "/Y",
                "${workspaceFolder}\\RP",
                "${env:LocalAppData}\\Packages\\Microsoft.MinecraftUWP_8wekyb3d8bbwe\\LocalState\\games\\com.mojang\\development_resource_packs\\${workspaceFolderBasename}\\RP"
            ],
        },
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Pull from development resource packs",
        "type": "shell",
        "windows": {
            "command": "xcopy",
            "args": [
                "/E",
                "/I",
                "/F",
                "${env:LocalAppData}\\Packages\\Microsoft.MinecraftUWP_8wekyb3d8bbwe\\LocalState\\games\\com.mojang\\development_resource_packs\\${workspaceFolderBasename}\\RP",
                "${workspaceFolder}\\dist\\RP"
            ],
        },
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
      },
      {
        "label": "Remove from production",
        "type": "shell",
        "windows": {
            "command": "rmdir",
            "args": [
                "/s",
                "${env:LocalAppData}\\Packages\\Microsoft.MinecraftUWP_8wekyb3d8bbwe\\LocalState\\games\\com.mojang\\resource_packs\\${workspaceFolderBasename}"
            ],
        },
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }