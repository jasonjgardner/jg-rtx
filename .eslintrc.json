{
    "env": {
        "commonjs": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "node/no-callback-literal": "error",
        "node/no-deprecated-api": "warning",
        "node/shebang": "warning"
    }
}
